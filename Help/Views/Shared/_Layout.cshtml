@using LNF.Web.Mvc;
@using LNF.Web.Mvc.UI;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="/common/bootstrap/css/bootstrap-lnf.min.css" rel="stylesheet" />
    <link href="/common/bootstrap/plugins/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link href="/common/scripts/jquery/FooTable-2/css/footable.core.min.css" rel="stylesheet" />
    <link href="/common/scripts/jquery/DataTables-1.10.9/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    <style>
        .panel {
            box-shadow: 2px 2px 3px #bbb;
        }

        .panel-title {
            font-weight: bold;
        }

            .panel-title > a {
                color: #5c7a94;
            }

        .custom.navbar.navbar-default {
            border: none;
            background-color: transparent;
        }

        ul.help-list {
            list-style: none;
        }

            ul.help-list li {
                padding: 5px;
            }
    </style>

    @RenderSection("styles", false)
</head>
<body>
    <div class="container-fluid">
        <div class="page-header">
            <h1>LNF Help</h1>
        </div>
        <div class="row">
            <div class="col-sm-2" style="margin-bottom: 10px;">
                <nav class="navbar navbar-default custom">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
                        <ul class="nav nav-pills nav-stacked">
                            @Html.NavigationLink("Home", "Index", "Home", ignoreAction: false)
                            @Html.NavigationLink("Fees", "Fees", "Home", ignoreAction: false)
                            @Html.NavigationLink("User Committee", "UserCommittee", "Home", ignoreAction: false)
                            @Html.NavigationLink("Staff Directory", "Index", "Directory")
                            @Html.NavigationLink("Staff Calendar", "Calendar", "Home", new { cal = "staff" }, ignoreAction: false, ignoreRouteValues: false)
                            @Html.NavigationLink("Facility Calendar", "Calendar", "Home", new { cal = "facility" }, ignoreAction: false, ignoreRouteValues: false)
                            @Html.NavigationLink("Helpdesk", "Helpdesk", "Home", ignoreAction: false)
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </nav>
            </div>
            <div class="col-sm-10">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/common/scripts/jquery/jquery-1.11.3.min.js"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/common/bootstrap/js/bootstrap.min.js"></script>
    <script src="/common/bootstrap/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>

    <script src="/common/scripts/jquery/FooTable-2/js/footable.js" type="text/javascript"></script>
    <script src="/common/scripts/jquery/FooTable-2/js/footable.sort.js" type="text/javascript"></script>
    <script src="/common/scripts/jquery/FooTable-2/js/footable.filter.js" type="text/javascript"></script>

    <script src="/common/scripts/jquery/DataTables-1.10.9/media/js/jquery.dataTables.min.js"></script>
    <script src="/common/scripts/jquery/DataTables-1.10.9/media/js/dataTables.bootstrap.min.js"></script>

    <script src="/common/scripts/jquery/jquery.cookie.js"></script>

    <script src="/common/scripts/moment.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
